    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">     
    <a href="/" style="position: absolute; top: 10px; left: 10px; color: white; text-decoration: none;">
    <i class="fas fa-home fa-2x"></i>
    <style> 
      /* Estilos para el body */
    body {
        width: 100%;
        background: rgb(187, 149, 46);
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif; /* Cambia la fuente a Arial o la que prefieras */
      }
      
      /* Estilos para el header */
      header {
        height: 25vh;
        background: #76a68b;
        font-family: '1942_report', sans-serif; /* Utiliza la fuente personalizada y luego las fuentes de respaldo */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      
      /* Estilos de fuente */
      h1 {
        color: #fff;
        font-size: 2rem; /* Tama침o de fuente personalizado */
        text-align: center;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Sombra de texto */
      }
      
      /* Agrega estilos para otros elementos si es necesario */
      
      /* Estilos para los enlaces de navegaci칩n */
      .nav-link {
        color: #fff;
        text-decoration: none;
        margin: 0 10px;
        font-weight: bold;
        transition: color 0.3s ease; /* Transici칩n de color suave en el enlace */
      }
      
      .nav-link:hover {
        color: #bcd5b0; /* Cambia el color al pasar el mouse */
      }
  </style>
  </a>
</head>
<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2 class="titulo-registro">Registro de Administrador</h2>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <form action="/registrar_administrador" method="POST">
            <div class="mb-3">
              <label for="nombre_completo" class="form-label">Nombre Completo</label>
              <input type="text" class="form-control" id="nombre_completo" name="nombre_completo" maxlength="22" required>
            </div>
            <div class="mb-3">
              <label for="rut" class="form-label">RUT</label>
              <input type="text" class="form-control" id="rut" name="rut" maxlength="22" required>
            </div>
            <div class="mb-3">
              <label for="contrasena" class="form-label">Contrase침a</label>
              <input type="password" class="form-control" id="contrasena" name="contrasena" maxlength="22" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
          </form>
        </div>
      </div>
    </div>
  </main>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
