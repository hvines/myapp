    <main>
      <div class="container">
        <div class="row">
          <div class="col">
            <h2>Crear Elección</h2>
            <form id="crearEleccionForm" method="POST" action="/crear_Eleccion">
              <div class="mb-3">
                <label for="nombreEvento" class="form-label"
                  >Nombre del Evento</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="nombreEvento"
                  name="nombreEvento"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="cantidadCandidatos" class="form-label"
                  >Cantidad de Candidatos</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="cantidadCandidatos"
                  name="cantidadCandidatos"
                  required
                />
              </div>
              <div id="candidatosContainer"></div>
              <button type="submit" class="btn btn-primary">Crear</button>
            </form>
          </div>
        </div>
      </div>
    </main>
    <div
      id="formStatus"
      style="display: none"
      class="alert alert-success mt-3"
    ></div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("crearEleccionForm");
