        const formStatus = document.getElementById("formStatus"); // Elemento para mostrar los detalles del formulario

        cantidadCandidatosInput.addEventListener("input", () => {
          const cantidad = parseInt(cantidadCandidatosInput.value, 10);
          candidatosContainer.innerHTML = "";

          for (let i = 1; i <= cantidad; i++) {
            const input = document.createElement("input");
            input.type = "text";
            input.className = "form-control mb-3";
            input.name = `candidato${i}`;
            input.placeholder = `Candidato ${i}`;
            candidatosContainer.appendChild(input);
          }
        });

